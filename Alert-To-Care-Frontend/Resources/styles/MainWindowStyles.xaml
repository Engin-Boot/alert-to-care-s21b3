<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ViewOptionButtonStyle" TargetType="Button">
        <Style.Setters>
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="Height" Value="300"></Setter>
            <Setter Property="Margin" Value="25"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Background" Value="CornflowerBlue"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style.Setters>
    </Style>
    <BitmapImage x:Key="ConfigureImage" UriSource="../icons/configure.png"></BitmapImage>
    <BitmapImage x:Key="HealthImage" UriSource="../icons/health.png"></BitmapImage>
</ResourceDictionary>